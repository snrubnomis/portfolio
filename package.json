{
  "name": "simon-burns-portfolio",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "node src/server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest .vite/ssr-manifest.json  --outDir dist",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "lighthouse": "lhci collect",
    "lint": "npm run lint:es && npm run lint:style && npm run lint:format && npm run lint:spell",
    "lint-fix": "npm run lint:es -- --fix && npm run lint:style -- --fix && npm run lint:format",
    "lint:es": "eslint . --report-unused-disable-directives --max-warnings 0 --cache --cache-location \"node_modules/.cache/eslint/\"",
    "lint:style": "stylelint \"./**/*.scss\" --cache --cache-location \"node_modules/.cache/stylelint/\"",
    "lint:format": "prettier . --write --ignore-unknown --no-error-on-unmatched-pattern --log-level warn --cache --cache-location \"node_modules/.cache/prettier/\"",
    "lint:spell": "cspell lint --quiet \"**\"",
    "preview:prod": "cross-env NODE_ENV=production node src/server.js",
    "preview": "cross-env NODE_ENV=local node src/server.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "prepare": "husky"
  },
  "dependencies": {
    "@carbon-labs/react-theme-settings": "^0.21.0",
    "@carbon/ibm-products": "^2.74.0",
    "@carbon/react": "^1.102.0",
    "@ibm/plex": "^6.4.1",
    "@lhci/cli": "^0.15.0",
    "classnames": "^2.5.1",
    "compression": "^1.7.5",
    "express": "^5.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.0.0",
    "react-router": "^7.5.2",
    "sirv": "^3.0.0"
  },
  "devDependencies": {
    "@double-great/stylelint-a11y": "^3.0.4",
    "@eslint/js": "^9.21.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "baseline-browser-mapping": "^2.9.12",
    "cross-env": "^10.0.0",
    "cspell": "^9.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.0.0",
    "msw": "^2.7.3",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.85.1",
    "stylelint": "^17.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-plugin-carbon-tokens": "^4.0.3",
    "stylelint-use-logical": "^2.1.3",
    "vite": "^7.0.0",
    "vitest": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,scss,css,html,yml,yaml}": [
      "node scripts/check-copyright.js --fix",
      "git add",
      "npm run lint"
    ],
    ".npmrc": "node -e \"console.error('Are you sure you want to commit .npmrc?'); process.exit(1);\""
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  }
}
